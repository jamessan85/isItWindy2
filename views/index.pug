extends layout

block content
    div(id="wind")
      .container
        .flex
          .box
            div
              div.form-group
                label(for="desiredWind") Wind:
                input(name="desiredWind" v-model="desiredWind")
              div.form-group
                label(for="location") Location:
                input(name="location" v-model="location")
              button.button(v-on:click="getWeather") Click
        .flex(v-if="theWeather")
          .box
            div(v-for="x in theWeather")
              h2 Current Weather
              p Direction:
                i(:class="glyph") 
              p Gust: {{ x.currently.windGust / 1.609 .toFixed() }}
              p Speed: {{ x.currently.windSpeed / 1.609 .toFixed() }}

