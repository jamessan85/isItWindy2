extends layout

block content
    div(id="wind")
      .container
        .flex
          .box
            div
              div.form-group
                label(for="desiredWind") Wind:
                input(name="desiredWind" v-model="desiredWind")
              div.form-group
                label(for="location") Location:
                input(name="location" v-model="location")
              button.button(v-on:click="getWeather") Click
        .flex(v-if="theWeather")
          .box
            div(v-for="x in theWeather")
              h3 {{ message }}
              h4 Current Weather
              p Direction:
                i(class="fas fa-arrow-left fa-3x") 
              p Gust: {{ convertToMph(x.currently.windGust) }} mph
              p Speed: {{ convertToMph(x.currently.windSpeed) }} mph

